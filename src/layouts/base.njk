    <link rel="stylesheet" href="../css/styles.css" type="text/css" />
  </head>
  <body>
    <!-- Main content -->
    {% block base %} {% endblock %}

    <!-- AlpineJS -->
    <script src="//unpkg.com/alpinejs" defer></script>

    <!-- Custom JS -->
    <script src="/js/scripts.js" type="text/javascript"></script>
  </body>
</html>
