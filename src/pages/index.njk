{% extends "layout.njk" %}
<!-- Page title -->
{% block title %}Welcome{% endblock %}
<!-- content -->
{% block content %}
<main>
  <h1 class="text-2xl font-medium underline text-center pt-12 text-blue-600">{{ hello_world }}</h1>

  <div class="mt-12 flex items-center flex-col" @click.away="open = false" x-data="{ open: false }">
    <div>
      <button @click="open = !open">Click me!</button>
    </div>

    <div x-cloak x-show="open">
      <p>Hey there.</p>
    </div>
  </div>
</main>
{% endblock %}
